{
  "$comment": "Copy to project root as .mcp.json — Full docs: human-handbook/docs/mcp-servers.md",
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp"],
      "$description": "Browser automation, E2E testing, screenshots"
    },
    "shadcn": {
      "command": "npx",
      "args": ["-y", "@jpisnice/shadcn-ui-mcp-server"],
      "$description": "Shadcn/ui component library integration"
    },
    "core-memory": {
      "type": "http",
      "url": "https://core.heysol.ai/api/v1/mcp?source=Claude-Code",
      "$description": "Persistent memory across sessions (requires account)"
    },
    "episodic-memory": {
      "command": "episodic-memory-mcp-server",
      "$description": "Local episodic memory — Install via /plugin install episodic-memory@superpowers-marketplace"
    }
  }
}
